<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article)%></li>
  <% end %>
</ul>

<p><%= link_to "<< List all tags", tags_path %></p>
<% if logged_in? %>
  <p><%= link_to "Remove Tag", tag_path(@tag), method: :delete, data: {confirm: "Are you sure you want to remove this tag?"} %></p>
<% end %>