<%= form_for(@article, html: {multppart: true}) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li> <%= error %> </li>
    <% end %>
  </ul>

  <p>
    <%= f.label :title, "Post Title" %><br>
    <%= f.text_field :title %><br>
  </p>
  <p>
    <%= f.label :body, "Write your post" %><br>
    <%= f.text_area :body %><br>
  </p>
  <p>
    <%= f.label :tag_list, "Your tags" %><br>
    <%= f.text_field :tag_list %><br>
  </p>
  <p>
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url %>
    <% end %>
    <%= f.label :image, "Add an image" %><br>
    <%= f.file_field :image %><br>
  </p>
  <p>
    <%= f.submit %><br>
  </p>
<% end %>

<p><%= link_to "Back to post", articles_path %></p>